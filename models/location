var mongoose = require('mongoose')
var Schema = mongoose.Schema;
var bcrypt = require('bcrypt')

//GeoJSON
var GeoSchema = newSchema ({
    type: {
        type: String,
        default: "Point"
    },
    coordinates: {
        type: [Number],
        index: "2dsphere"
    }
})

var locationSchema = new Schema({
    token: {
        type: String,
        require: true
    },
    geometry: GeoSchema
})

userSchema.pre('save', function(next) {
    var token = this;
    
    if(this.isModified('geometry') || this.isNew) {
        bcrypt.genSalt(10, function (err, salt) {
            if (err) {
                return next(err)
            }
            bcrypt.hash(token.geometry, salt, function(err,hash) {
                if (err) {
                    return next(err)
                }
                token.geometry = hash;
                next()
            })
        })
    } else {
        return next()
    }
})


module.exports = mongoose.model('Location', locationSchema)